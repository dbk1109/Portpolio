@charset "utf-8";
@import url(https://fonts.googleapis.com/earlyaccess/notosanskr.css);
/* reset browser styles */
html, body, div, span, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img, ins, kbd, q, s, samp,small, strike, strong, sub, sup, tt, var, b, u, i, center, dl, dt, dd, ol, ul, li, fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td, article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup, menu, nav, output, ruby, section, summary,
time, mark, audio, video {
	margin: 0;
	padding: 0;
	border: 0;
	font-size: 100%;
	vertical-align: baseline;
}
article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section {
	display: block;
}
body {
	line-height: 1.2;
}
ol {
	padding-left: 1.4em;
	list-style: decimal;
}
ul {
	padding-left: 1.4em;
	list-style: none;
}
table {
	border-collapse: collapse;
	border-spacing: 0;
}
a {
	text-decoration: none;
	color: initial;
}
/* end reset browser styles */



/* start stylesheet 본문스타일 */

* { font-family: 'Noto Sans KR', sans-serif;
    font-style: none; }

html, body {
	width: 100%;
	height: 100%;
	box-sizing: border-box;
	background: #E2E2E2;
}
.header {
	width: 100%;
    height: 4vh;
	background: #2d262e;
	z-index: 100;
	position: fixed;
    padding: 0 2vh;
	box-sizing: border-box;
}
.logo {
    float: left;
    width: 2vh;
    height: 2vh;
    margin-top: 1.1vh;
	background: url('../images/logo.png') no-repeat;
	background-size: 100%;
	overflow: hidden;
}
.logo_text {
    float: left;
	font-size: 2vh;
    font-weight: 500;
    text-transform: uppercase;
    line-height: 4vh;
    margin-left: .5rem;
	color: #fff;
}
.mob_nav {
	display: none;
	float: right;
	margin-top: .8vh;
    font-size: 2vh;
    cursor: pointer;
    color: #fff;
}
.nav {
	float: right;
	font-size: 1em;
	line-height: 4vh;
    margin-right: -2vw;
}
.nav a {
	color: #fff;
	padding: 0 2vw;
}
.nav a:hover {
	background: #fff;
	border-radius: 5px;
	color: #000;
}
.title {
	height: 50vh;
	background: url('../images/background.jpg') top no-repeat;
	background-size: cover;
	overflow: hidden;
    padding: 25vh 10vw 10vw;
	box-sizing: border-box;
	color: #fff;
	text-shadow: 0 0 20px #000;
}
.title h1 {
	font-size: 8em;
	line-height: 80%;
	display: inline-block;
}
.title h1.right {
	margin-right: 4vh;
}
.title p {
	font-size: 1.6em;
	margin-top: 4vh;
	line-height: 150%;
}

#profile .left, #profile .right {
    width: 50%;
    height: 50vh;
    padding: 5%;
    box-sizing: border-box;
    float: left;
}
#profile .left {
	background: url('../images/profile.jpg') 80% top no-repeat;
	background-size: cover;
}
#profile .right {
	text-align: center;
	background: #fff;
}
#profile .right i {
	color: #d65e3d;
}
#profile .right h1{
    font-size: 3em;
    font-weight: 100;
    margin-top: 1%;
    margin-bottom: 5%;
	font-family: 'Permanent Marker', cursive;
	color: #d65e3d;
}
#profile .right p {
	text-align: left;
	line-height: 150%;
}

#profile h2{
    font-size: 20px;
    border-left: 3px solid #d65e3d;
    padding-left: 10px;
    margin-bottom : 20px;
    color: #d65e3d;
}
#profile .career .one {
    font-size: 12px;
    background-color: #373737;
    color:#fff;
    text-align: center;
    width: 50px;
    line-height: 110%;
    position: absolute;
    padding: 0;
    margin-top: 8px;
}
#profile .career p {
    font-size: 16px;
    line-height: 160%;
    padding-left: 60px;
    color: #373737;
    margin-bottom: 10px;
}
#profile .career p.fa-rotate-90 {
    position: absolute;
    margin-left: 25px;
    margin-top: -9px;
    width: 10px;
    height: 10px;
    padding: 0;
    line-height: 100%;
    font-weight: 600;
    font-size: 20px;
}
#profile .right .license {
}
#profile .license p{
    font-size: 16px;
    line-height: 160%;
    color: #373737;
}
#profile .license .ones {
    margin-top : 50px;
}

.english {
    display: none;
}
#profile .talk{
    width: 100%;
    padding: 20px;
    font-size: 50px;
    color: #ECECEC;
    text-align: center;
    margin-top: 20px;
}



@media screen and (max-width:980px)  {
	
.title {
	height: 35vh;
	overflow: hidden;
	background: url('../images/background.jpg') top no-repeat;
	background-size: cover;
    padding: 11vh 10vw 10vw;
	box-sizing: border-box;
	color: #fff;
	text-shadow: 0 0 20px #000;
	text-align: right;
}

#profile .info {
    font-size: 16px;
    line-height: 16px;
}
#profile .info p {
    margin-bottom: 15px;
}
#profile .info i {
    width: 10px;
    height: 10px;
    font-size: 10px;
    background: #000;
    padding: 10px;
    color: #fff;
    border-radius: 50%;
    margin-right: 5px;
}
}


@media screen and (max-width:750px)  {

.mob_nav {
	display: initial;
}
.nav {
	display: none;
	background: #fbb951;
	background-image: -moz-linear-gradient(right, #6090a6, #fbb951 50%,#d65e3d 100.0%);
	background-image: -webkit-linear-gradient(right, #6090a6, #fbb951 50%,#d65e3d 100.0%);
	background-image: -o-linear-gradient(right, #6090a6, #fbb951 50%,#d65e3d 100.0%);
	background-image: -ms-linear-gradient(right, #6090a6, #fbb951 50%,#d65e3d 100.0%);
	background-image: linear-gradient(right, #6090a6, #fbb951 50%,#d65e3d 100.0%);
	width: 100%;
	text-align: center;
	font-size: 1.5em;
	line-height: 2em;
	padding-bottom: 4vh;
	padding-right: 0;
	margin-right: 0;
}
.nav span {
	display: block;	
    margin: 10px 50px 0;
}
.nav span:hover {
	background: rgba(255,255,255,.5);
}
.nav a {
	padding: 5px 0;
	margin: 0;
}
.nav a:hover {
	background: none;
	color: #000;
}
#profile .left {
    width: 100%;
    margin-bottom: 10px;
}
#profile .right .career .one {
    margin-top: 3px;
    width: 40px;
    font-size: 8px;
}
#profile .right h1 {
    font-size: 25px;
    margin-bottom: 7%;
}
#profile .right h1 span {
    font-size: 13px;
}
#profile .right h2 {
    font-size: 16px;
    margin-bottom: 15px;
}
#profile .right .career p {
    font-size: 11px;
    padding-left: 50px;
}
#profile .right .license p{
    font-size: 11px;
}
#profile .right .career p.fa-rotate-90 {
    margin-top: -3%;
    margin-left: 20px;
}
    #profile .left {
    width: 300px;
    display: block;
    margin: 0 auto;
    margin-bottom: 20px;
}
#profile .right .career {
    margin-right: 0;
    float: inherit;
    width: 100%;
    margin-bottom: 10%;
}
#profile .right .license {
    float: inherit;
    width: 100%;
}
    #profile .right .career p {
    font-size: 13px;
}
#profile .right .license p {
    font-size: 13px;
}
#profile .right .career p.fa-rotate-90 {
    margin-top: -0.8%;
}
#profile .right h1 {
    font-size: 30px;
}
#profile .right h1 span {
    font-size: 16px;
}
    #profile .left {
    width: 300px;
    display: block;
    margin: 0 auto;
    margin-bottom: 20px;
}
#profile .right {
    width: 100%;
    float: initial;
    padding-top: 0;
}

}